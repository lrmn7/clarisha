{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "outDir": "./build"
  },
  "include": ["src", "migrations"],
  "exclude": ["node_modules"]
}
